<div class="row">
@foreach (var user in ViewBag.UsersList)
{
    <div class="col-4 mb-4">
        <div class="card" style="height:100%; width: 100%;">

            <div class="card-body d-flex justify-content-between flex-column">
                <div>

                    @if (@user.Porecla != null)
                    {
                        <p><i class="bi bi-person"> </i> Nume de utilizator: @user.Porecla</p>
                    }
                    else
                    {
                        <p><i class="bi bi-person"> </i> Nume de utilizator: @user.UserName</p>
                    }

                    <p><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>

                    @if (@user.PhoneNumber != null)
                    {
                        <p><i class="bi bi-phone"></i> Telefon utilizator: @user.PhoneNumber</p>
                    }

                    @if (@user.Descriere != null)
                    {
                            <p><i class="bi bi-chat-left-quote-fill"></i> Descrierea utilizatorului poate fi vizualizata accesand profilul acestuia!</p>
                    }

                </div>
                <div class="d-flex flex-row justify-content-between p-3">

                    <div>
                        <a asp-controller="Utilizatori" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-success">Editare utilizator</a>
                    </div>

                    <div>
                        <a asp-controller="Utilizatori" asp-action="Show" asp-route-id="@user.Id" class="btn btn-sm btn-success">Vizualizare utilizator</a>
                    </div>

                    @if(User.IsInRole("Admin"))
                    {
                        <div>
                            <a asp-controller="Utilizatori" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-success">Stergere utilizator</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

</div>

