@model Ask_Me_Now.Models.Utilizator

@if (@Model.Porecla != null)
{
    <h2>Bun venit pe profilul utilizatorului @Model.Porecla!</h2>
}
else
{
    <h2>Bun venit pe profilul utilizatorului @Model.UserName!</h2>
}

<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            @if (@Model.Porecla != null)
            {
                <p><i class="bi bi-person"> </i> Nume de utilizator: @Model.Porecla</p>
            }
            else
            {
                <p><i class="bi bi-person"> </i> Nume de utilizator: @Model.UserName</p>
            }

            <p><i class="bi bi-envelope"></i> Email utilizator: @Model.Email</p>

            @if(Model.Descriere!=null)
            {
                <hr>
                <p><i class="bi bi-chat-left-quote-fill"> </i> Descrierea utilizatorului: </p>
                <p>@Model.Descriere</p>
                <hr>
            }
            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> Rolurile utilizator:</p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@role</span>
                }
            }
        </div>


        @if ((string)Model.Id == ViewBag.UserCurent.Id || User.IsInRole("Admin"))
        {
            <div class="d-flex flex-row justify-content-between p-3">
                <form asp-controller="Utilizatori" asp-action="Delete" method="post" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Stergere utilizator</button>
                </form>
            </div>
            <div class="d-flex flex-row justify-content-between p-3">
                <form asp-controller="Utilizatori" asp-action="Edit" method="post" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Editare utilizator</button>
                </form>
            </div>
        }

    </div>
</div>






