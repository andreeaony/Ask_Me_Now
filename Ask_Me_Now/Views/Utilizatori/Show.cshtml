@model Ask_Me_Now.Models.Utilizator

@if (@Model.Prenume!= null && @Model.Nume!=null)
{
    <h2>Bun venit pe profilul utilizatorului @Model.Nume @Model.Prenume!</h2>
}
else
{
    <h2>Bun venit pe profilul utilizatorului @Model.UserName!</h2>
}
@if (!string.IsNullOrEmpty(Model.PozaProfil))
{
    <img src="@Model.PozaProfil" alt="Poza de profil" width="150" height="150" />
}
else
{
    <img src="/images/default-user.png" alt="Poza de profil" width="150" height="150" />
}
<div class="card mt-3" style="height:100%; width: 100%;">

    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            @if (@Model.Prenume != null && Model.Nume !=null)
            {
                <p><i class="bi bi-person"> </i> Nume de utilizator: @Model.Nume @Model.Prenume</p>
            }
            else
            {
                <p><i class="bi bi-person"> </i> Nume de utilizator: @Model.UserName</p>
            }

            <p><i class="bi bi-envelope"></i> Email utilizator: @Model.Email</p>

            @if(Model.Descriere!=null)
            {
                <hr>
                <p><i class="bi bi-chat-left-quote-fill"> </i> Descrierea utilizatorului: </p>
                <p>@Model.Descriere</p>
                <hr>
            }
            @if (ViewBag.Roles.Count > 0)
            {
                <p><i class="bi bi-person"> </i> Rolurile utilizatorului:</p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@role</span>
                }
            }

            <hr />
            <h3>Activitate recenta</h3>
            <hr />
            <h3><strong>Intrebari puse recent:</strong></h3>
            <hr />
            @if (ViewBag.IntrebariRecente.Count!=0)
            {
                    @foreach (var intrebare in ViewBag.IntrebariRecente)
                    {
                    <p><a href="@Url.Action("Show", "Intrebari", new { id = intrebare.IntrebareId })">@intrebare.Continut - @intrebare.Data</a></p>
                    }
            }
            else
            {
                <p>Nu exista intrebari puse recent.</p>
            }
            <h3><strong>Raspunsuri date recent:</strong></h3>
            <hr />
            @if (ViewBag.RaspunsuriRecente.Count!=0)
            {
                    @foreach (var raspuns in ViewBag.RaspunsuriRecente)
                    {
                    <p><a href="@Url.Action("Show", "Intrebari", new { id = raspuns.IntrebareId })">@raspuns.Continut - @raspuns.Data</a></p>
                        
                    }
            }
            else
            {
                <p>Nu exista raspunsuri postate recent.</p>
            }
        </div>

    </div>
</div>





    
