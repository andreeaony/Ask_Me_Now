@model Ask_Me_Now.Models.Intrebare


<h2 class="text-center mt-5">Adaugare intrebare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Intrebari">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nume" class="form-label">Numele Utilizatorului</label>
                    <br />
                    <input asp-for="Nume" class="form-control" />

                    <!-- Mesaj de validare pentru titlu -->
                    <span asp-validation-for="Nume" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Continut" class="form-label">Continut Intrebare</label>
                    <br />
                    <textarea asp-for="Continut" class="form-control summernote"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Continut" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label for="CategorieId">Selectati categoria</label>
                    <br />
                    <select asp-for="CategorieID" asp-items="Model.Categ" class="form-control">
                        <option value="">Selectati categoria</option>
                    </select>

                    <!-- Mesaj de validare pentru CategoryId -->
                    <span asp-validation-for="CategorieID" class="text-danger"></span>

                    <br />
                </div>
                <br />
                <button class="btn btn-success" type="submit">Adauga articol</button>

            </form>
        </div>
    </div>
</div>


